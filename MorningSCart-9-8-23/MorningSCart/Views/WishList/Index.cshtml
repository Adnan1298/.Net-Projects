@*@using ShoppingCart.DataAccess;*@
@inject IHttpContextAccessor abc;
@using System.Globalization;
@using MorningSCart.Models
@model CartViewModel
@{
    ViewData["Title"] = "Cart Overview";
}
<h3>Your WishList Items</h3>
@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <tr>
            <th>Product ID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th></th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Add" asp-route-id="@item.ProductId">+</a>
                    <a class="btn btn-info btn-sm" asp-action="Decrease" asp-route-id="@item.ProductId">-</a>
                    <a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@item.ProductId">Remove</a>

                </td>
                <td>@item.Price.ToString("C2")</td>
                <td>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
            </tr>
            @if (string.IsNullOrEmpty(abc.HttpContext.Session.GetString("u")))
            {

                <a asp-controller="Logins" asp-action="UserLogin" class="btn btn-dark" style="color:white!important;background-color:black!important">
                    <i class="fa fa-fw fa-user text-light"></i>Signup/Login
                </a>
            }
            else
            {
                <form asp-controller="Payment" asp-action="Index" method="post">
                    <button type="submit" class="btn btn-success">Proceed To Payment</button>
                </form>

            }
        }
        <tr>
            <td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
        </tr>
        <tr>
            <td class="text-right" colspan="4">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go To Shopping</a>
                @*  <a class="btn btn-success" asp-controller="Payment" asp-action="Index">Go To Shopping</a>*@
                <a class="btn btn-danger" asp-action="Clear">Clear Cart</a>
            </td>
        </tr>
    </table>

    <div class="text-end">
        <form asp-controller="Cart" asp-action="Clear" method="post">
            <button type="submit" class="btn btn-warning">Clear Cart</button>
        </form>

    </div>
}
else
{
    <h3 class="display-4 text-center">Your cart is empty.</h3>
}

