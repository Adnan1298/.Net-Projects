@model IEnumerable<ShoppingCart.Data.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-controller="AdminProducts" asp-action="Index" rel="nofollow">Home</a>
                <span></span>Product
                <span></span> Index
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    @* <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th> *@
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Images)
                                        <img />
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.LDescription)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Brand)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Slug)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Category)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="image product-thumbnail">
                                            <img src="@item.Images" />
                                        </td>
                                        <td class="product-des product-name">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="product-name" data-title="Discription">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td data-title="LDiscription">
                                            @Html.DisplayFor(modelItem => item.LDescription)
                                        </td>
                                        <td class="price" data-title="Price">
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td data-title="Brand">
                                            @Html.DisplayFor(modelItem => item.Brand)
                                        </td>
                                        <td data-title="Slug">
                                            @Html.DisplayFor(modelItem => item.Slug)
                                        </td>
                                        <td data-title="Name">
                                            @Html.DisplayFor(modelItem => item.Category.Name)
                                        </td>
                                        <td class="text-right action" data-title="Action">
                                            <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>