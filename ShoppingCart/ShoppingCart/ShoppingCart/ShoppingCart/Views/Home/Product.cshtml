@model IEnumerable<ShoppingCart.Data.Product>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-controller="Home" asp-action="Index" rel="nofollow">Home</a>
                <span></span> Shop
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @* <div class="shop-product-fillter">
                        <div class="sort-by-product-area">
                            <div class="sort-by-cover">
                                <div class="sort-by-product-wrap">
                                    <div class="sort-by">
                                        <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                    </div>
                                    <div class="sort-by-dropdown-wrap">
                                        <span> Featured <i class="fi-rs-angle-small-down"></i></span>
                                    </div>
                                </div>
                                <div class="sort-by-dropdown">
                                    <ul>
                                        <li><a class="active" href="#">Featured</a></li>
                                        <li><a href="#">Price: Low to High</a></li>
                                        <li><a href="#">Price: High to Low</a></li>
                                        <li><a href="#">Release Date</a></li>
                                        <li><a href="#">Avg. Rating</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div> *@
                    @await Component.InvokeAsync("Categories")
                    </div>
                    <div class="row product-grid-3">
                        @foreach (var item in Model)
                            {
                            <div class="col-lg-3 col-md-4">
                                <div class="product-cart-wrap mb-30">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a asp-controller="Home" asp-action="SingleProduct" asp-route-id="@item.ProductId">
                                                <img class="default-img" src="@item.Images" alt="">
                                            </a>
                                        </div>
                                    @if (User.IsInRole("User"))
                                    {
                                        <div class="product-action-1">

                                            <a aria-label="Add To Wishlist" class="action-btn hover-up" href="shop-wishlist.html"><i class="fi-rs-heart"></i></a>
                                            <a aria-label="Add To Cart" class="action-btn hover-up" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId"><i class="fi-rs-shuffle"></i></a>
                                        </div>
                                    }
                                        <div class="product-badges product-badges-position product-badges-mrg">
                                            <span class="hot">Hot</span>
                                        </div>
                                    </div>
                                    <div class="product-content-wrap">
                                        <h2><a asp-controller="Home" asp-action="SingleProduct" asp-route-id="@item.ProductId">@item.Name</a></h2>
                                        <div class="rating-result" title="90%">
                                            <span>
                                                <span>90%</span>
                                            </span>
                                        </div>
                                        <div class="product-price">
                                            <span>@item.Price</span>
                                        </div>
                                    @if (User.IsInRole("User"))
                                    {
                                        <div class="product-action-1 show">
                                        <a aria-label="Add To Cart" class="action-btn hover-up" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId"><i class="fi-rs-shopping-bag-add"></i></a>
                                        </div>
                                    }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

